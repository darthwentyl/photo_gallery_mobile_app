<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wendland.michal.photogallery">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/title_app"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhotoGallery">
        <activity
            android:name=".view.SendPhotosActivity"
            android:exported="true" />
        <activity
            android:name=".view.ShowPhotosActivity"
            android:exported="true" />
        <activity
            android:name=".view.TakePhotoActivity"
            android:exported="true" />
        <activity
            android:name=".view.SettingsActivity"
            android:exported="true"
            android:label="@string/setting_str" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:label="@string/title_app">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>